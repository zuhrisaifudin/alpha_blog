<div class="container">
  <a href="<%=new_article_path%>"><button type="button" class="btn btn-success">Crete New</button></a>
  <% @articles.each do |article|%>
    <div class="card">
      <h5 class="card-header">Created <%= article.user.username if article.user%> <%=time_ago_in_words(article.created_at)%> Ago. Last Update <%=time_ago_in_words(article.updated_at)%></h5>
      <div class="card-body">
        <h5 class="card-title"><%= article.title%></h5>
        <p class="card-text"><%= article.description%>.</p>
        <a href="<%=edit_article_path(article)%>" class="btn btn-primary">Edit</a>
        <a href="<%=article_path(article)%>" class="btn btn-primary">Show</a>
        <%=link_to "Delete", article_path(article),method: :delete, data: {confirm: "Anda yakin ingin menghapus artikel ini?"},class:"btn btn-danger"%>
      </div>
    </div>
  <%end%>
</div>
